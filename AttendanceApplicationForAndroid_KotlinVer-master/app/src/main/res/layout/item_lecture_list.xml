<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
                name="item"
                type="jp.ac.ibaraki.kotlinattendanceapplication.views.LectureListDataModel" />
    </data>

    <LinearLayout
            android:id="@+id/item_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <TextView
                android:id="@+id/text_lecture_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="30sp"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/text_teacher_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/list_text_teacher_name"
                    android:textSize="14sp"/>
            <TextView
                    android:id="@+id/text_room_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/list_text_room_name"
                    android:textSize="14sp"/>
        </LinearLayout>


    </LinearLayout>
</layout>
